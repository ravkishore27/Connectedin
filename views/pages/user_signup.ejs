<html>
<head>
    <title>User Login</title>
    <link rel="stylesheet" href="/stylesheets/newstyle.css">
    <% include ../partials/head.ejs %>
</head>

<body>
<div class="container">
    <div class="login-container">
            <div id="output"></div>
            <h3 style="color:#336699;">User Sign Up</h3>
            </br>
             <div class="form-box">
              <form action="/user_signup" method="post">
                <label>First Name<input type="text" placeholder="FirstName" name="firstname" required></label></br></br>
                <label>Last Name<input type="text" placeholder="LastName" name="lastname" required></label></br></br>
                <label>Email<input type="text" placeholder="Email" name="email" required></label></br></br>
                <label>Status<input type="text" placeholder="status" name="status" required></label></br></br>
                <label>Password<input type="password" placeholder="Password" name="password" required></label>
                </br></br>
                <span><% if (locals.message) {%>
                    <%= message %>
                <% } %></span>
                <button type="submit" class="btn btn-primary btn-md round" >SignUp</button>
               </form>
            </div>
        </div>       
    </div>
</body>

<footer>
    <% include ../partials/footer.ejs %>
</footer>
</html>
